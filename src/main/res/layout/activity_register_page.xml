<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1BFD3"
    tools:context=".RegisterPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="149dp"
        android:layout_height="0dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="40dp"
        android:text="新快递员注册"
        android:textColor="#592361"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newName"
        android:layout_width="322dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:textCursorDrawable="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newTel"
        android:layout_width="322dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="请输入电话"
        android:inputType="textPersonName"
        android:textCursorDrawable="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newName" />

    <EditText
        android:id="@+id/newPwd"
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTel" />

    <EditText
        android:id="@+id/newPwdAgain"
        android:layout_width="324dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPwd" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="145dp"
        android:layout_height="142dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:background="#00FDFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myuser" />

    <Button
        android:id="@+id/newpostman"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>